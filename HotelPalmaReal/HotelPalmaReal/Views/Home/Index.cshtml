@{
    ViewData["Title"] = "Hotel Palma Real";
}

<section class="section pb-4">
    <div class="overlay"></div>
    <video playsinline="playsinline" autoplay="autoplay" muted="muted" loop="loop">
        <source src="~/video/videoP.mp4" type="video/mp4">
    </video>
    <div class="container h-100">
        <div class="d-flex h-100 text-center align-items-center">
            <div class="w-100 text-white">
                <h1 class="display-4">Grupo Palma Real</h1>
                <h4 class="text-white font-weight-bold">Quédate ya con nosotros para siempre.</h4>
            </div>
        </div>
    </div>
</section>





<section class="section pb-4">
    <div class="container">

        <div class="row check-availabilty" id="next">
            <div class="block-32 aos-init aos-animate" data-aos="fade-up" data-aos-offset="-200">

                <form action="#">
                    <div class="row">
                        <div class="col-md-6 mb-3 mb-lg-0 col-lg-3">
                            <label for="checkin_date" class="text-white font-weight-bold">Check In</label>
                            <div class="field-icon-wrap">
                                <div class="icon"><span class="icon-calendar"></span></div>
                                <input type="date" id="checkin_date" class="form-control dateColor">
                            </div>
                        </div>
                        <div class="col-md-6 mb-3 mb-lg-0 col-lg-3">
                            <label for="checkout_date" class="text-white font-weight-bold">Check Out</label>
                            <div class="field-icon-wrap">
                                <div class="icon"><span class="icon-calendar"></span></div>
                                <input type="date" id="checkout_date" class="form-control dateColor">
                            </div>
                        </div>
                        <div class="col-md-6 mb-3 mb-md-0 col-lg-3">
                            <div class="row">
                                <div class="col-md-6 mb-3 mb-md-0">
                                    <label for="adults" class="text-white font-weight-bold">Adults</label>
                                    <div class="field-icon-wrap">
                                        <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                                        <select name="" id="adults" class="form-control dateColor">
                                            <option value="">1</option>
                                            <option value="">2</option>
                                            <option value="">3</option>
                                            <option value="">4+</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3 mb-md-0">
                                    <label for="children" class="text-white font-weight-bold">Children</label>
                                    <div class="field-icon-wrap">
                                        <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                                        <select name="" id="children" class="form-control dateColor">
                                            <option value="">1</option>
                                            <option value="">2</option>
                                            <option value="">3</option>
                                            <option value="">4+</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-3 text-center">
                            <button type="button" class="btn btn-primary">Verificar estancia</button>
                        </div>
                    </div>
                </form>
            </div>


        </div>
    </div>
</section>

<section class="my-5">
    <div class="container">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <h1 class="text-white font-weight-bold">Conocenos por dentro</h1>
                <div class="container mt-4">
                    <div class="row justify-content-center">

                        <div class="col-md-4 col-12">
                            <div class="card bg-primary text-white">
                                <div>
                                    <img src="~/images/food/food.webp"
                                         class="card-img-top" />
                                </div>

                                <div class="card-body text-center">
                                    <h5 class="card-title">Restaurante</h5>
                                    <p class="card-text text-justify">
                                        Gran variedad de gustro gastronomicos
                                    </p>

                                    <a href="#" class="btn btn-success"
                                       data-toggle="modal" data-target=".bs-example-modal-lg">
                                        <span><i class="fa fa-eye"></i></span>   Mirar
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4 col-12">
                            <div class="card bg-primary text-white">
                                <div>
                                    <img src="~/images/food/room.webp"
                                         class="card-img-top" />
                                </div>

                                <div class="card-body text-center">
                                    <h5 class="card-title">Hospedaje</h5>
                                    <p class="card-text text-justify">
                                        Tenemos los mejores suits de Honduras
                                    </p>

                                    <a href="#" class="btn btn-success"
                                       data-toggle="modal" data-target=".bs-example-modal-lg">
                                        <span><i class="fa fa-eye"></i></span>   Mirar
                                    </a>
                                </div>
                            </div>
                        </div>


                        <div class="col-md-4 col-12">
                            <div class="card bg-primary text-white">
                                <div>
                                    <img src="~/images/food/pool.webp"
                                         class="card-img-top" />
                                </div>

                                <div class="card-body text-center">
                                    <h5 class="card-title">Diversión</h5>
                                    <p class="card-text text-justify">
                                        Gran variedad de eventos para disfrutar
                                    </p>

                                    <a href="#" class="btn btn-success"
                                       data-toggle="modal" data-target=".bs-example-modal-lg">
                                        <span><i class="fa fa-eye"></i></span>   Mirar
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>
</section>

<div class="container text-center">

    <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog"
         aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">

                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="~/images/food/pool.webp" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/images/food/golf.webp" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/images/food/golfi.webp" alt="Third slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/images/food/room.webp" alt="Third slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/images/food/peolple.webp" alt="Third slide">
                        </div>

                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/images/food/salon.webp" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>

<section class="section"></section>